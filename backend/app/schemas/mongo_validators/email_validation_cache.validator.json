{
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "email",
        "status",
        "createdAt",
        "expiresAt"
      ],
      "properties": {
        "email": {
          "bsonType": "string"
        },
        "status": {
          "enum": [
            "valid",
            "invalid",
            "unknown"
          ]
        },
        "reason": {
          "bsonType": "string"
        },
        "details": {
          "bsonType": "object"
        },
        "createdAt": {
          "bsonType": "date"
        },
        "expiresAt": {
          "bsonType": "date"
        }
      }
    }
  }
}