{
  "$id": "https://example.com/schemas/waqi_station_readings.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "waqi_station_readings",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "ts",
    "meta",
    "aqi",
    "time"
  ],
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "UTC from time.s + tz"
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "station_idx"
      ],
      "properties": {
        "station_idx": {
          "type": "integer",
          "description": "WAQI idx ref"
        }
      }
    },
    "aqi": {
      "type": "number"
    },
    "time": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "s",
        "tz"
      ],
      "properties": {
        "v": {
          "type": "integer"
        },
        "s": {
          "type": "string"
        },
        "tz": {
          "type": "string"
        }
      }
    },
    "iaqi": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "v"
        ],
        "properties": {
          "v": {
            "type": "number"
          }
        }
      }
    }
  }
}