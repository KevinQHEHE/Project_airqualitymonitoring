{
  "$id": "https://example.com/schemas/waqi_daily_forecasts.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "waqi_daily_forecasts",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "station_idx",
    "day",
    "pollutants"
  ],
  "properties": {
    "station_idx": {
      "type": "integer"
    },
    "day": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "YYYY-MM-DD"
    },
    "pollutants": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pm25": {
          "type": "object",
          "required": [
            "avg",
            "min",
            "max"
          ],
          "properties": {
            "avg": {
              "type": "number"
            },
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "pm10": {
          "type": "object",
          "required": [
            "avg",
            "min",
            "max"
          ],
          "properties": {
            "avg": {
              "type": "number"
            },
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "o3": {
          "type": "object",
          "required": [
            "avg",
            "min",
            "max"
          ],
          "properties": {
            "avg": {
              "type": "number"
            },
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "uvi": {
          "type": "object",
          "required": [
            "avg",
            "min",
            "max"
          ],
          "properties": {
            "avg": {
              "type": "number"
            },
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "fetched_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}