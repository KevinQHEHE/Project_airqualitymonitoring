{
  "$id": "https://example.com/schemas/users.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "users",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "username",
    "email",
    "passwordHash",
    "role"
  ],
  "properties": {
    "username": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "passwordHash": {
      "type": "string"
    },
    "role": {
      "type": "string",
      "enum": [
        "user",
        "admin"
      ]
    },
    "location": {
      "type": "object",
      "required": [
        "type",
        "coordinates"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "enum": [
            "Point"
          ]
        },
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "number"
          }
        }
      }
    },
    "preferences": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "language": {
          "type": "string"
        },
        "theme": {
          "type": "string",
          "enum": [
            "light",
            "dark"
          ]
        },
        "favoriteStations": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "defaultStation": {
          "type": "integer"
        },
        "notifications": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "object"
            }
          ]
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}