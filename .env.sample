# MongoDB Atlas connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=air_quality_db

# MongoDB Admin connection (for user creation scripts only)
# MONGO_ADMIN_URI=mongodb+srv://admin_user:admin_password@air-quality-cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority

# Database Users (reference only - do not commit actual passwords)
# Admin user: aqm_admin (readWrite + dbAdmin permissions)
# App user: aqm_app (readWrite permissions) 
# Readonly user: aqm_readonly (read permissions)

# Email configuration for alerts
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# External API Configuration
OPENAQ_API_URL=https://api.openaq.org/v2/
GEOS_CF_DATASET_URL=https://gmao.gsfc.nasa.gov/geos_cf/

# Flask configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Rate limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/0
