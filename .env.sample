# MongoDB Atlas connection (update with your actual credentials)
# MONGO_URI=mongodb+srv://your_username:your_password@your-cluster.mongodb.net/?retryWrites=true&w=majority

# MongoDB Local connection (for testing)
MONGO_URI=<your_local_mongo_uri>
MONGO_DB=<your_database_name>

# Air Quality API Key 
AQICN_API_URL=https://api.waqi.info/
AQICN_API_KEY=<your_aqicn_api_key>
AQICN_RATE_LIMIT=1000
AQICN_TIMEOUT=30

# Mail 
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=<your_smtp_username>
MAIL_PASSWORD=<your_smtp_password>
MAIL_DEFAULT_SENDER=<your_default_sender_email>

# External email validation (Abstract API) - store key in env, do NOT commit real keys
# Obtain from https://app.abstractapi.com/
ABSTRACT_API_KEY=<your_abstract_api_key>


